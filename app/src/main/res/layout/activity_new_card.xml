<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewCardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <fragment
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_bar_height"
                android:id="@+id/title_bar_back"
                android:layout_alignParentTop="true"
                android:name="com.us517.today.ui.titleBar.TitleBarBack"
                tools:layout="@layout/fragment_title_bar_back">
            </fragment>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/new_card_title"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/divider_light" />
        <!-- Divider -->
        <RelativeLayout
            android:layout_marginStart="@dimen/edge_margin"
            android:layout_marginEnd="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/new_card_number_label"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        style="@style/input_field_basic"
                        android:paddingStart="@dimen/edge_margin"
                        android:paddingEnd="@dimen/edge_margin"
                        android:id="@+id/new_card_number"
                        android:background="@drawable/edittext_selector"
                        android:drawablePadding="@dimen/edge_margin"
                        android:digits="01234 56789"
                        android:maxLength="23"
                        android:layout_width="match_parent"
                        android:drawableStart="@drawable/account_credit_card_24"

                        />
                    <ImageButton
                        android:id="@+id/new_card_number_clear"
                        android:layout_width="50dp"
                        android:layout_marginLeft="-50dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:src="@drawable/delete_outline_gray_24"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/new_card_number_validation"
                    style="@style/input_validation_basic"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="@string/new_card_expire_label"/>
                        <EditText
                            style="@style/input_field_basic"
                            android:id="@+id/new_card_expire"
                            android:background="@drawable/edittext_selector"
                            android:digits="0123456789/"
                            android:inputType="phone"
                            android:lines="1"
                            android:maxLength="5"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:id="@+id/new_card_expire_validation"
                            style="@style/input_validation_basic"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="@string/new_card_cvv_label"/>
                        <EditText
                            style="@style/input_field_basic"
                            android:id="@+id/new_card_cvv"
                            android:background="@drawable/edittext_selector"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="4"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:id="@+id/new_card_cvv_validation"
                            style="@style/input_validation_basic"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="@string/new_card_zip_label"/>
                        <EditText
                            style="@style/input_field_basic"
                            android:id="@+id/new_card_zip"
                            android:background="@drawable/edittext_selector"
                            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:lines="1"
                            android:maxLength="6"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:id="@+id/new_card_zip_validation"
                            style="@style/input_validation_basic"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <android.widget.Button
            android:id="@+id/new_card_add"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="15dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:background="@drawable/button_outline_selector"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:text="@string/new_card_add" />
        <View
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"/>
    </LinearLayout>


</RelativeLayout>